<GridPane fx:id="wrapper" fx:controller="sample.Controllers.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="CENTER_RIGHT" gridLinesVisible="false">

    <columnConstraints>
        <ColumnConstraints percentWidth="100" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="40" />
        <RowConstraints percentHeight="20" />
        <RowConstraints percentHeight="20" />
        <RowConstraints percentHeight="20" />
    </rowConstraints>

    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="0">
        <Label styleClass="title">
            Come back soon;)
        </Label>
    </HBox>
    <HBox alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="1">
        <Label>
            Let's pickup a name:
        </Label>
    </HBox>
    <HBox alignment="CENTER" GridPane.rowIndex="2" GridPane.columnIndex="0">

        <TextField fx:id="saveName">

        </TextField>

    </HBox>
    <HBox alignment="CENTER" spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="3">
        <Button styleClass="button">
            Save and rest;)
        </Button>
        <Button styleClass="button">
            Let's continue
        </Button>
    </HBox>

</GridPane>